<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/title_ml"    android:orientation="vertical"    tools:context=".Views.SplashScreenActivity"    tools:layout_editor_absoluteY="25dp">    <LinearLayout        android:layout_width="match_parent"        android:layout_height="match_parent"        android:layout_marginStart="8dp"        android:layout_marginTop="8dp"        android:layout_marginEnd="8dp"        android:layout_marginBottom="8dp"        android:orientation="vertical"        android:padding="16dp"        app:layout_constraintBottom_toBottomOf="parent"        app:layout_constraintEnd_toEndOf="parent"        app:layout_constraintStart_toStartOf="parent"        app:layout_constraintTop_toTopOf="parent">        <com.airbnb.lottie.LottieAnimationView            android:id="@+id/animation_view"            android:layout_width="match_parent"            android:layout_height="430dp"            android:layout_alignParentStart="true"            android:layout_alignParentTop="true"            android:layout_gravity="center"            app:lottie_autoPlay="true"            app:lottie_fileName="splash_load.json"            app:lottie_loop="true"            tools:ignore="MissingConstraints" />            <com.airbnb.lottie.LottieAnimationView                android:id="@+id/animation_view2"                android:layout_width="match_parent"                android:layout_height="50dp"                app:lottie_autoPlay="true"                app:lottie_fileName="anim-marcosapps.json"                app:lottie_loop="true"                tools:ignore="MissingConstraints"                />        <TextView            android:layout_width="match_parent"            android:layout_height="wrap_content"            android:text="MarcosApps"            android:textAlignment="center"            android:textColor="@color/colorPrimaryDark"            android:textSize="30sp"/>    </LinearLayout></android.support.constraint.ConstraintLayout>